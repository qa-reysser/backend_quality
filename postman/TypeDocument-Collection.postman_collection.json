							"    pm.response.to.have.status(409);",
							"});",
							"",
							"pm.test(\"Error type is duplicate_value_detected\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.errors.subtype).to.eql(\"duplicate_value_detected\");",
							"});"
						],
						"type": "text/javascript"
